<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.patel.androidlabs.ChatWindow">

    <ListView
        android:id="@+id/chatView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ChatEdit"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/ChatEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/Chatbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Chatbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/chatView"
        android:layout_alignParentBottom="true"
        android:text="@string/Chatbtn" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/frame"></FrameLayout>
</RelativeLayout>
